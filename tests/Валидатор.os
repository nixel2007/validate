	Ожидаем.Что(Нарушение.ТипСвойства()).Равно("Поле");
	Ожидаем.Что(Нарушение.Сообщение()).Равно("Значение не заполнено");
	Ожидаем.Что(Нарушение.Код()).Равно("filled");

